<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="2"
    android:rowCount="6"
    android:useDefaultMargins="true">

    <TextView
        android:id="@+id/gasolinaPrecoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/combustivel"
        android:padding="@dimen/combustivel"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/gasosaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_margin="@dimen/combustivel"
        android:padding="@dimen/combustivel"
        android:text="@string/gasolina"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/gasolinaSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:max="100" />


    <TextView
        android:id="@+id/etanolPrecoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/combustivel"
        android:padding="@dimen/combustivel"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/etanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="center"
        android:layout_margin="@dimen/combustivel"
        android:padding="@dimen/combustivel"
        android:text="@string/alcool"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/etanolSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnSpan="1"
        android:max="100" />

    <TextView
        android:id="@+id/resultadoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="1"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_margin="@dimen/combustivel"
        android:padding="@dimen/combustivel"
        android:text="@string/resultado"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/combustivelImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_rowSpan="2"
        android:layout_columnSpan="2"
        android:src="@drawable/combustivel" />


</GridLayout>